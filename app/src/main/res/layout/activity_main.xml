<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#D1ECB1"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Penjualan Barang"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        android:layout_centerHorizontal="true"
        android:id="@+id/txttitle"
        android:layout_below="@+id/image"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@android:drawable/btn_star_big_on" />

    <EditText
        android:id="@+id/outNama"
        android:layout_marginEnd="20dp"
        android:textColor="@color/black"
        android:background="@drawable/shape_border"
        android:drawableLeft="@android:drawable/btn_star_big_on"
        android:hint="input nama barang"
        android:textColorHint="@color/red"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/txttitle"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/outjumlah"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/outNama"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shape_border"
        android:drawableLeft="@android:drawable/btn_star_big_on"
        android:hint="input jumlah beli"
        android:textColorHint="@color/red"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/outharga"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/outjumlah"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shape_border"
        android:drawableLeft="@android:drawable/btn_star_big_on"
        android:hint="input harga barang"
        android:textColor="@color/black"
        android:textColorHint="@color/red"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="250dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/white"
        android:layout_below="@+id/outharga"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@android:drawable/btn_star_big_on"
        android:textSize="20sp"
        android:text="SEND DATA"
        android:background="@drawable/shape_border" />


</RelativeLayout>
